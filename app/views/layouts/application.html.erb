  </head>

  <body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <!-- Brand -->
 <li class="nav-item active">    
                    <%= link_to "Constructora JyJ", root_path, :class => "navbar-brand" %></li> 
                      <!-- Links -->
  <ul class="navbar-nav">
    <li class="nav-item">
      <%= link_to "Nosotros", { :controller => "menu", :action => "nosotros" }, :class => "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Servicio", { :controller => "menu", :action => "servicio" }, :class => "nav-link" %>
    </li>

    <!-- Dropdown -->
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
        Mundo J & J
      </a>
      <div class="dropdown-menu">
        <%= link_to "Departamentos",{ :controller => "datos", :action => "personales"}, :class => "dropdown-item"%> 
                                    <%= link_to "Mis cotizaciones",{ :controller => "cotizacions", :action => "index"}, :class => "dropdown-item" %>
        
